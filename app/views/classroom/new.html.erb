<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@classroom) do |f| %>
    <br>
      <%= f.label :teacher_name %>
    <br>
      <%= f.text_field :teacher_name %>
    <br>
    <br>
      <%= f.label :number %>
    <br>
      <%= f.text_field :cell_number %>
    <br>
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>