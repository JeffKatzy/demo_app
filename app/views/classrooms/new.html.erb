<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= simple_nested_form_for(@teacher) do |f| %>
    <br>
      <%= f.label :name %>
    <br>
      <%= f.text_field :name %>
    <br>
      <%= f.label :email %>
    <br>
      <%= f.text_field :email %>
    <br>
    <%= f.fields_for :classroom do |classroom_form| %>
      <%= classroom_form.label :classroom_name %>
      <br>
      <%= classroom_form.text_field :name %>
      <br>
      <%= classroom_form.label :number %>
      <br>
      <%= classroom_form.number_field :number %>
      <%= f.submit "Create classroom", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>