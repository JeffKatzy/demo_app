<%= simple_nested_form_for @lecture, :html => { :multipart => true } do |form| %>
	subject name<br>
	<%= form.text_field :name %> 
	<br>
	description<br>
	<%= form.text_field :description %> 
	<br>
	<%= form.file_field :soundfile %>
	<br>
	<%= form.fields_for :questions do |question_form| %>
		<%= question_form.text_field :name %>
		<%= question_form.link_to_remove "Remove this question" %>
	<% end %>
	<p><%= form.link_to_add "Add a task", :questions %>
	
	 <%= form.submit "submit" %>
<% end %>