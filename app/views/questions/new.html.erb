<%= form_for @question, :html => { :multipart => true } do |form| %>
	subject name<br>
	<%= form.text_field :name %> 
	<br>
	description<br>
	<%= form.text_field :description %> 
	<br>
	<%= form.file_field :soundfile %>
	<br>
	<br>
	answer number<br>
	<%= form.text_field :answer %>
	<br>
	<%= form.submit "submit" %>
<% end %>