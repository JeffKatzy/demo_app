<div class="row six columns panel">
		<h1> Teacher sign in</h1>
			<%= form_for(:session, url: sessions_path) do |f| %>
				<%= f.label :email %>
				<%= f.text_field  :email %>
				<%= f.label :password %>
				<%= f.password_field :password %>
				<br>
				<%= f.submit "Sign in", class: "button" %>
			<% end %>
</div>

	<div class= "panel row six columns">
		<h3>New teacher? </h3>
		<br>
		<br>
		<p><%= link_to "Sign up now!", signup_path, class: "button" %></p>
	</div>