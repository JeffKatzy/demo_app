<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= simple_nested_form_for(@teacher) do |f| %>
    <%= render 'error_messages' %>
    <br>
      <%= f.label :teacher_name %>
    <br>
      <%= f.text_field :name %>
    <br>
      <%= f.label :teacher_email %>
    <br>
      <%= f.text_field :email %>
    <br>
    <%= f.label :password %>
      <%= f.password_field :password %>
    <br>
      <%= f.label :password_confirmation, "Confirmation" %>
      <br>
      <%= f.password_field :password_confirmation %>
      <br>
    <%= f.fields_for :classrooms do |classroom_form| %>
      <%= classroom_form.label :classroom_name %>
      <br>
      <%= classroom_form.text_field :name %>
      <br>
      <%= classroom_form.label :number %>
      <br>
      <%= classroom_form.number_field :number %>
      <br>
    <%= classroom_form.link_to_remove "Remove this classroom" %>
       <% end %>
       <br>
       <p><%= f.link_to_add "Add a classroom", :classrooms %>
        <br>

      <%= f.submit "Create classroom", class: "btn btn-large btn-primary" %>
    
  <% end %>
  </div>
</div>