<% provide(:title, @teacher.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @teacher.name %>
      </h1>
      Classrooms:
      <br>
      <br>
      <% @teacher.classrooms.each do |classroom| %>
      	<%= link_to classroom.name, classroom, class: "btn" %>
      <% end %>
      <br>
      <% @teacher.classrooms.each do |classroom| %>
      	<% classroom.users.incomplete.each do |user| %>
      	<br>
          incomplete users:
          <br>
          <br>
      		<%= link_to user.cell_number, edit_user_path(user) %>
      	<% end %>
      	<% end %> 
    </section>
  </aside>
</div>
