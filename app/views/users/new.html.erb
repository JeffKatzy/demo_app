<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    <br>
      <%= f.label :name %>
    <br>
      <%= f.text_field :name %>
    <br>
      <%= f.label :email %>
    <br>
      <%= f.text_field :email %>
    <br>
      <%= f.label :number %>
    <br>
      <%= f.text_field :cell_number %>
    <br>
      <%= f.label :classroom_number %>
      <%= f.number_field :classroom_id %>
    <br>
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>